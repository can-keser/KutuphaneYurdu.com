@model BookVM
  <main class="main">
    <nav aria-label="breadcrumb" class="breadcrumb-nav border-0 mb-0">
        <div class="container d-flex align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="#">Kitaplar</a></li>
                <li class="breadcrumb-item active" aria-current="page">Kitap Detayı</li>
            </ol>

        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->

    <div class="page-content">
        <div class="container">
            <div class="product-details-top">
                <div class="row">
                    <div class="col-md-2">
                        <div class="product-gallery product-gallery-vertical">
                            <div class="row">
                                <figure class="product-main-image">
                                    <img src="@Model.Book.Picture" alt="@Model.Book.Name">
                                </figure><!-- End .product-main-image -->


                            </div><!-- End .row -->
                        </div><!-- End .product-gallery -->
                    </div><!-- End .col-md-6 -->

                    <div class="col-md-10">
                        <div class="product-details">
                            <h1 class="product-title">@Model.Book.Name</h1>

                            
                            <div class="product-cat">
                                <span>YAZAR:</span>
                                <a href="#">@Model.Book.Writer.NameSurname</a><br>
                                <span>KATEGORİ:</span>
                                <a asp-controller="Book" asp-action="Category" asp-route-id="@Model.Book.Category.ID" asp-route-name="@GeneralTool.UrlConvert(Model.Book.Category.Name)">@Model.Book.Category.Name</a>
                            </div><!-- End .product-cat -->
                        <hr />

                            <div class="product-details-action">
                                <div class="details-action-wrapper">
                                    <a asp-controller="PDF" asp-action="index" asp-route-name="@GeneralTool.UrlConvert(Model.Book.Name)" asp-route-id="@Model.Book.ID"  target="_blank" class="btn btn-lg btn-dark ">OKU</a>

                                </div>
                            </div>

                        </div><!-- End .product-details -->
                        
                    </div><!-- End .col-md-6 -->
                </div><!-- End .row -->
            </div><!-- End .product-details-top -->

            <div class="product-details-tab col-md-12" id="ProductDetail">
               
                <div class="nav-item">
                    <h4 class="nav-link active" id="product-desc-link" style="text-align:center;">Kitap Hakkında</h4>
                </div>


                <div class="tab-content">
                    <div class="tab-pane fade show active" id="product-desc-tab" role="tabpanel" aria-labelledby="product-desc-link">
                        <div class="product-desc-content">
                            <h3>@Model.Book.Name</h3>
                            <p>@Model.Book.Description</p>
                           
                        </div><!-- End .product-desc-content -->
                    </div><!-- .End .tab-pane -->
                   
                </div><!-- End .tab-content -->
            </div><!-- End .product-details-tab -->

            <h2 class="title text-center mb-3">Beğenebileceğiniz Diğer Kitaplar</h2><!-- End .title text-center -->

            <div class="owl-carousel carousel-equal-height owl-simple" data-toggle="owl"
                 data-owl-options='{
                                    "nav": false,
                                    "dots": true,
                                    "margin": 20,
                                    "loop": false,
                                    "responsive": {
                                        "0": {
                                            "items":2
                                        },
                                        "480": {
                                            "items":2
                                        },
                                        "768": {
                                            "items":3
                                        },
                                        "992": {
                                            "items":4
                                        },
                                        "1440": {
                                            "items":5
                                        }
                                    }
                                }'>
                @foreach (Book b in Model.Books)
                {
        <div class="product">
            <figure class="product-media">
                <img src="@b.Picture" alt="@b.Name" class="product-image">
            </figure>

            <div class="product-cat">
                <br />
                <p href="#">@b.Writer.NameSurname</p>
            </div>
            <h3 class="product-title">@b.Name</h3>
            <a asp-controller="Book" asp-action="Detail" asp-route-name="@GeneralTool.UrlConvert(b.Name)" asp-route-id="@b.ID" class="btn btn-primary btn-round">KİTAP DETAYI</a>

        </div>
        }
            </div><!-- End .owl-carousel -->
        </div><!-- End .container -->
    </div><!-- End .page-content -->
</main><!-- End .main -->